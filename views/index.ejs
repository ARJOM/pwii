<%- include('header') %>
    <% if (entries.length) { %>
        <% for (const entry of entries) { %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted pull-right">
                        <%= entry.published %>
                    </div>
                    <%= entry.title %>
                </div>
                <div class="panel-body">
                    <%= entry.content %>
                </div>
            </div>
        <% } %>
    <% } else { %>
       Sem mensagens! <a href="/new-entry">Adicione uma!</a>
    <% } %>
<%- include('footer') %>
